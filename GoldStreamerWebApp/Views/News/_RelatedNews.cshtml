@model List<BLL.DomainClasses.News>
<div class="clr"></div>
@if (Model.Count > 0)
{

    <h1>@Resources.General.RelatedNews</h1>

    <div class="rel_news_con">
        @{
    var nCount = 0;
        }

        @foreach (var item in Model)
        {

            <div class="rel_news" @(nCount == Model.Count - 1 ? "style=margin-left:0px;" : "")>
                <div class="rel_news_con_img">
                    <img src='~/Uploads/News/@(item.Photo ?? "camera.png")' id="imgNews" class="news_img" />
                </div>
                <a href="/News/Details?newsId=@item.Id" style="text-decoration:none">
                    <strong>@item.Title</strong>
                </a>
            </div>
            nCount = nCount + 1;
        }
    </div>
}
