@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = ViewBag.HasLocalPassword ? Resources.General.ChangePassword : Resources.General.ResetPassword;
    Layout = "~/Views/Shared/_LayoutInner.cshtml";

    }

<h1>@Resources.General.ChangePassword </h1>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@section UpperBanner{
    <div class="innerBanner">
        <div class="banner"><img src="../../Content/Images/inner_banner.jpg" width="1050" height="180" alt="" /></div>

    </div>
}