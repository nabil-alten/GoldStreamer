<script>
    function initialize() {
        lat = 30.049499;
        lon = 31.245461;
        var mapCanvas = document.getElementById('map-canvas');
        var mapOptions = {
            center: new google.maps.LatLng(lat, lon),
            zoom: 17,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(mapCanvas, mapOptions);

        latlon = new google.maps.LatLng(lat, lon)
        var marker = new google.maps.Marker({ position: latlon, map: map, title: 'Techvision Headquarter' });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>

<section id="ForgetPWForm">
    @using (Html.BeginForm("SendFeedback", "Feedback", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div style="width:100%; min-height: 600px; overflow:auto;">

            <p>
                نظمت عمادة خدمة المجتمع والتعليم المستمر بجامعة الأميرة نورة بنت عبدالرحمن برنامجا تدريبيا بعنوان (ممارسة الخدمة الاجتماعية في مجالات العمل الاجتماعي) انطلاقا من مبدأ التعاون بين الجامعات
            </p>

            <table width="50%" border="0" cellspacing="15" dir="rtl" style="margin:20px; float:right; text-align:right;">
                <tr>
                    <td style="width:100px;">@Resources.General.UserName </td>
                    <td>
                        <span style="color:red;margin-right:5px; vertical-align:top;">*</span>
                        @Html.TextBoxFor(m => m.Name, new { name = "name", type = "text", placeholder = @Resources.General.UserName, maxlength = "50", @class = "form-control", autofocus = "true" })
                       <br /> <label style="color :red;"> @Html.ValidationMessageFor(m => m.Name)</label>
                        @*@Html.ValidationMessageFor(m => m.Name)*@
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Resources.General.Email </td>
                    <td>
                        <span style="color:red;margin-right:5px; vertical-align:top;">*</span>
                        @Html.TextBoxFor(m => m.Email, new { name = "name", type = "text", placeholder = "ex: user@example.com", @class = "form-control", autofocus = "true" })
                        <br /> <label style="color :red;"> @Html.ValidationMessageFor(m => m.Email)</label>
                        @*@Html.ValidationMessageFor(m => m.Email)*@
                    </td>
                    <td></td>
                </tr>

                <tr>
                    <td style="width:100px;">@Resources.General.Subject</td>
                    <td>
                        <span style="color: transparent; margin-right: 5px; vertical-align: top; ">*</span>
                        @Html.TextBoxFor(m => m.Subject, new { name = "name", type = "text", placeholder = @Resources.General.Subject, maxlength = "50", @class = "form-control" })
                        <br /><label style="color :red;"> @Html.ValidationMessageFor(m => m.Subject)</label>
                        @*@Html.ValidationMessageFor(m => m.Subject)*@
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td> @Resources.General.Comment </td>
                    <td>
                        <span style="color:red;margin-right:5px; vertical-align:top; ">*</span>
                        @Html.TextAreaFor(m => m.Comment, new { id = "message", name = "message", rows = "8", cols = "38", placeholder = @Resources.General.Comment, maxlength = "250", @class = "form-control", autofocus = "true" })
                        <br /><label style="color :red;"> @Html.ValidationMessageFor(m => m.Comment)</label>
                        @*@Html.ValidationMessageFor(m => m.Comment)*@
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>

                    <td><input style=" margin-right: 15px;" class="btn" type="submit" name="" value="@Resources.General.Submit" /></td>
                    <td></td>
                </tr>
            </table>
            <div class="mapArea" id="mapArea">
                <div id="map-canvas"></div>
            </div>
        </div>

    }
</section>
